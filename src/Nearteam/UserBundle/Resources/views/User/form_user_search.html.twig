{% extends "NearteamUserBundle::layout.html.twig" %}

{% block title%}
    <title>{{'search.user.title.key'|trans}}</title>
{% endblock %}

{% block user %}


    {% block form %}
		

    {% if form is defined %}
    <form action="{{ path('NearteamUserBundle_user') }}" method="post" class="wellbeck" id="search_user_form">
		<fieldset class="row-fluid">
					<div class="span4">
                    	<div class="row-fluid">
                            <div class="span12">
                                <div class="row-fluid">

                                 {{ form_label(form.email) }}							    
						         {{ form_widget(form.email,{ 'attr': {'class': 'span12'}}) }}
								  <span class="errorForm">{{ form_errors(form.email) }}</span>

                                   
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
						
                              <div class="span12">
                                <div class="row-fluid">

								 {{ form_label(form.idUser) }}							    
						         {{ form_widget(form.idUser,{ 'attr': {'class': 'span11'}}) }}
								  <span class="errorForm">{{ form_errors(form.idUser) }}</span>

                                </div>
								</div>
													
                        </div>
					</div>
					<div class="span4">
                        <div class="row-fluid">
                            <div class="span6">
                                <div class="row-fluid">
                                  
								 {{ form_label(form.lastName) }}
						         {{ form_widget(form.lastName,{ 'attr': {'class': 'span11'}}) }}
								  <span class="errorForm">{{ form_errors(form.lastName) }}</span>

                                </div>
                            </div>
                            <div class="span6">
                                <div class="row-fluid">
                                 {{ form_label(form.firstName)}}
							     {{ form_widget(form.firstName,{ 'attr': {'class': 'span12'}}) }}
								  <span class="errorForm">{{ form_errors(form.firstName) }}</span>

                                </div>
                            </div>
                        </div>
                    	<label>{{ form_label(form.phone) }}</label>
                            <div class="row-fluid">
                                      <div class="span12">
                                    <div class="row-fluid">
                                       
                                 
										{{ form_widget(form.phone,{ 'attr': {'class': 'span12'}}) }}
										 <span class="errorForm">{{ form_errors(form.phone) }}</span>
                                       
                                    </div>
                                </div>
                            </div>
					</div>
					<div class="span4">
                        <div class="row-fluid">
                            <div class="span6">
                                <div class="row-fluid">
                                 {{ form_label(form.cp) }}
							    {{ form_widget(form.cp,{ 'attr': {'class': 'span11'}}) }}
								<span class="errorForm">{{ form_errors(form.cp) }}</span>

                                </div>
                            </div>
                            <div class="span6">
                                <div class="row-fluid">

                                <!-- {{ form_label(form.city) }}							     
						         {{ form_widget(form.city,{ 'attr': {'class': 'span11'}}) }}
								 <span class="errorForm">{{ form_errors(form.city) }}</span> -->

                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6">
                                <div class="row-fluid">

                                 {{ form_label(form.country) }}							     
						         {{ form_widget(form.country,{ 'attr': {'class': 'span11'}}) }}
								 <span class="errorForm">{{ form_errors(form.country) }}</span>

                                </div>
                            </div>
                        </div>
					</div>

                    <input id="Filtrer" name="Filtrer" type="submit" value="{{'filter.boutton'|trans}}" class="symfony-button-grey btn pull-right btn_validate_form" />
				    <input type="hidden" id="id_country_ville" value="" />
					{{ form_widget(form._token) }}	
				</fieldset>
				
    </form>
    {% endif %}
{% if isValid == 1  %}
<div id="grid">
{% render "NearteamUserBundle:User:userList"  %}
</div>
{% endif %}	

{% endblock %}


{% endblock %}

{% block javascripts -%}

{{ parent() }}
	{% javascripts 
		'@NearteamUserBundle/Resources/public/js/list_user.js'
					
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
	{% endjavascripts %} 

{% endblock %}





